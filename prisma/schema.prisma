// ------------------------------------------------------
//  DATABASE CONFIG (Prisma 6 — URL dans .env)
// ------------------------------------------------------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ------------------------------------------------------
//  PRISMA CLIENT GENERATOR
// ------------------------------------------------------
generator client {
  provider = "prisma-client-js"
}

// ------------------------------------------------------
//  USER MODEL
// ------------------------------------------------------
model User {
  id        String      @id @default(cuid())
  email     String      @unique
  name      String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  userPlan  UserPlan?
  limits    UserLimits?
  projects  Project[]
  previews  PreviewSession[]   // ← RELATION OPPOSÉE OBLIGATOIRE
}

// ------------------------------------------------------
//  PLAN MODEL
// ------------------------------------------------------
model Plan {
  id                String   @id @default(cuid())
  name              String
  slug              String   @unique
  maxActivePreviews Int
  maxCpuPercent     Int
  maxMemoryMb       Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  users             UserPlan[]
}

// ------------------------------------------------------
//  USER PLAN
// ------------------------------------------------------
model UserPlan {
  id        String   @id @default(cuid())
  userId    String   @unique
  planId    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  plan      Plan     @relation(fields: [planId], references: [id])
}

// ------------------------------------------------------
//  USER LIMITS (override des quotas par user)
// ------------------------------------------------------
model UserLimits {
  id                String   @id @default(cuid())
  userId            String   @unique
  maxActivePreviews Int
  maxCpuPercent     Int
  maxMemoryMb       Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user              User     @relation(fields: [userId], references: [id])
}

// ------------------------------------------------------
//  PROJECT MODEL
// ------------------------------------------------------
model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])
  previews    PreviewSession[]
}

// ------------------------------------------------------
//  PREVIEW SESSION MODEL
// ------------------------------------------------------
model PreviewSession {
  id          String   @id @default(cuid())
  projectId   String
  userId      String
  port        Int
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project     Project  @relation(fields: [projectId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
}
